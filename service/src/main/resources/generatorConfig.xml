<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="jdbc.properties"></properties>
    <context id="default" targetRuntime="MyBatis3">
        <!-- remove comment -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!-- DB Config -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/demo?
        useUnicode=true&amp;characterEncoding=utf8&amp;useSSL=false&amp;serverTimezone=Asia/Shanghai"
                        userId="root" password="Jing#123">
        </jdbcConnection>
        <!-- DO -->
        <javaModelGenerator  targetPackage="com.joker.sql.entity" targetProject="./src/main/java"/>
        <!-- MAPPER -->
        <sqlMapGenerator     targetPackage="mapper"               targetProject="./src/main/resources"/>
        <!-- DAO -->
        <javaClientGenerator targetPackage="com.joker.sql.dao"    targetProject="./src/main/java" type="XMLMAPPER"/>
        <!-- Table/DO -->
        <table  tableName="%"
                enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
                enableSelectByExample="false" selectByExampleQueryId="false"></table>
    </context>
</generatorConfiguration>