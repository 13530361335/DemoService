<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="jdbc.properties"></properties>
    <context id="default" targetRuntime="MyBatis3">
        <!-- remove comment -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!-- DB Config -->
        <jdbcConnection driverClass="${jdbc.driverClassName}" connectionURL="${jdbc.url}"
                        userId="${jdbc.username}" password="${jdbc.password}">
        </jdbcConnection>
        <!-- DO -->
        <javaModelGenerator  targetPackage="${entity}" targetProject="./src/main/java"/>
        <!-- MAPPER -->
        <sqlMapGenerator     targetPackage="${mapper}" targetProject="./src/main/resources"/>
        <!-- DAO -->
        <javaClientGenerator targetPackage="${dao}"    targetProject="./src/main/java" type="XMLMAPPER"/>
        <!-- Table/DO -->
        <table  tableName="%"
                enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
                enableSelectByExample="false" selectByExampleQueryId="false"></table>
    </context>
</generatorConfiguration>